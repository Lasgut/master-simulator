<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="link0" params="parent">
    
    <link name="link0">
      <visual>
        <geometry>
          <cylinder radius="0.015" length="0.04"/> 
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </visual>
    </link>

    <joint name="joint1" type="revolute">
      <axis xyz="0 0 1"/> 
      <limit effort="1" lower="-3.1416" upper="3.1416" velocity="0.5"/>
      <origin xyz="0 0 0" rpy="0 0 0"/> 
      <parent link="${parent}"/>
      <child link="link0"/>
    </joint>

  </xacro:macro>
</robot>



<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="link2" params="parent">
    
    <link name="link2">
      <visual>
        <geometry>
          <cylinder radius="0.015" length="0.04"/> 
        </geometry>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="0.015" length="0.04"/> 
        </geometry>
      </collision>
      <inertial>
        <mass value="0.194"/>
        <origin xyz="0 0 0"/> 
        <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/> 
      </inertial>
    </link>

    <joint name="joint3" type="revolute">
      <axis xyz="0 0 1"/> 
      <limit effort="1" lower="-3.1416" upper="3.1416" velocity="0.5"/>
      <origin xyz="0.15071 0 0" rpy="3.1415 0 0"/> 
      <parent link="${parent}"/>
      <child link="link2"/>
    </joint>

  </xacro:macro>
</robot>
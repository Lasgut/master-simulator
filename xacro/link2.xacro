<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="link2" params="parent">

    <link name="body2">
      <visual>
        <origin xyz="0.075 0 0" rpy="0 0 0" />
        <geometry>
          <box size="0.15 0.02 0.02"/> 
        </geometry>
        <material name="grey"/>
      </visual>
      <inertial>
        <mass value="0.429"/>
        <origin xyz="0.073 0 0"/> 
        <inertia ixx="0.000087" ixy="-0.000076" ixz="-0.000010" iyy="0.003190" iyz="0" izz="0.003213"/> 
      </inertial>
    </link>

    <joint name="link1_to_body2" type="fixed">
      <origin xyz="0 0 0" rpy="0 0 0"/> 
      <parent link="${parent}"/>
      <child link="body2"/>
    </joint>
    
    <link name="link2">
      <visual>
        <geometry>
          <cylinder radius="0.015" length="0.04"/> 
        </geometry>
      </visual>
    </link>

    <joint name="joint3" type="revolute">
      <axis xyz="0 0 1"/> 
      <dynamics damping="1.0" friction="1.0"/> 
      <limit effort="1" lower="-3.1416" upper="3.1416" velocity="0.5"/>
      <origin xyz="0.15071 0 0" rpy="3.1415 0 0"/> 
      <parent link="${parent}"/>
      <child link="link2"/>
    </joint>

  </xacro:macro>
</robot>
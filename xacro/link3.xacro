<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="link3" params="parent">

    <link name="body3">
      <visual>
        <origin xyz="0 -0.02 0" rpy="0 0 0" />
        <geometry>
          <box size="0.02 0.02 0.02"/> 
        </geometry>
        <material name="grey"/>
      </visual>
      <inertial>
        <mass value="0.115"/>
        <origin xyz="0.017 -0.026 -0.002"/> 
        <inertia ixx="0.000120" ixy="-0.000061" ixz="-0.000001" iyy="0.000062" iyz="0" izz="0.000156"/> 
      </inertial>
    </link>

    <joint name="link2_to_body3" type="fixed">
      <origin xyz="0 0 0" rpy="0 0 0"/> 
      <parent link="${parent}"/>
      <child link="body3"/>
    </joint>
    
    <link name="link3">
      <visual>
        <geometry>
          <cylinder radius="0.015" length="0.04"/> 
        </geometry>
      </visual>
    </link>

    <joint name="joint4" type="revolute">
      <axis xyz="0 0 1"/> 
      <dynamics damping="1.0" friction="1.0"/> 
      <limit effort="1" lower="-3.1416" upper="3.1416" velocity="0.5"/>
      <origin xyz="0.00531 -0.01928 0" rpy=" -1.5707 0 -1.3021"/> 
      <parent link="${parent}"/>
      <child link="link3"/>
    </joint>

  </xacro:macro>
</robot>